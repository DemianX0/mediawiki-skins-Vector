{{! `role` is unnecessary but kept to support selectors in any gadgets or user styles. }}
<{{tag}} id="{{id}}" {{#class}}class="{{.}}"{{/class}} aria-labelledby="{{label-id}}" role="navigation" {{{html-tooltip}}}
	 {{{html-user-language-attributes}}}>
	{{#is-dropdown}}
	<input type="checkbox" class="vector-menu-checkbox" aria-labelledby="{{label-id}}"/>
	{{/is-dropdown}}
	<h3 id="{{label-id}}" class="{{label-class}}"><span> {{label}} </span></h3>
	{{! `body` class for backwards compatibility but let editors know not to use
	 it via HTML comment below: }}
	<ul class="body {{list-classes}}">
		{{#data-items}}
		{{{html-item}}}
		{{/data-items}}
	</ul>
	{{{html-after-portal}}}
</{{tag}}>

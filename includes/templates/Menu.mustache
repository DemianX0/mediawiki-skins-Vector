{{!
	See @typedef MenuDefinition
}}
{{! `role` is unnecessary but kept to support selectors in any gadgets or user styles. }}
<nav id="{{id}}" {{#class}}class="{{.}}"{{/class}} aria-labelledby="{{label-id}}" role="navigation" {{{html-tooltip}}}
	 {{{html-user-language-attributes}}}>
	{{#is-dropdown}}
	<input type="checkbox" class="vector-menu-checkbox" aria-labelledby="{{label-id}}"/>
	{{/is-dropdown}}
	<h3 id="{{label-id}}" class="{{label-class}}">
		<span>{{label}}</span>
	</h3>
	{{! `body` class for backwards compatibility. }}
	{{! `menu` is on dropdowns for historic reasons. It should not be applied elsewhere per T253329. }}
	<ul class="body{{#is-dropdown}} menu{{/is-dropdown}} vector-menu--list"> 
		{{{html-items}}}
	</ul>
	{{{html-after-portal}}}
</nav>
